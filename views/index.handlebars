<h1>Burgers!</h1>

<h2>Burgers Available!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.id}} {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devouredHtml" value="true">
          <button type="submit">Devour It!</button>
        </form>

        {{!-- {{> cats/delete-cat}} --}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured</h2>

<ul>
  {{#each burgers}}
